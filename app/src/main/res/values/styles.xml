<resources>

<!-- Base application theme. -->
<style name="AppTheme" parent="Theme.AppCompat">

    <!-- app bar color -->
    <item name="colorPrimary">@color/datapad_actionbar</item>
    <!--   theme UI controls like checkboxes and text fields -->
    <item name="colorAccent">@color/datapad_accent</item>

    <!-- app background -->
    <item name="android:windowBackground">@color/datapad_background</item>

    <!-- varying text colors -->
    <item name="android:textColorPrimary">@color/datapad_text_primary</item>
    <item name="android:textColorSecondary">@color/datapad_text_secondary</item>
    <item name="android:textColorTertiary">@color/datapad_text_tertiary</item>
    <item name="android:textColorHint">@color/datapad_text_hint</item>

    <!-- button background color -->
    <item name="android:colorButtonNormal">@color/datapad_button</item>

    <!-- alert dialog themes -->
    <item name="android:alertDialogTheme">@style/AppTheme.Dialog.Alert</item>
    <item name="android:dialogTheme">@style/AppTheme.Dialog</item>

    <!--<item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>-->
</style>

<!-- theme for DialogFragments -->
<style name="AppTheme.Dialog" parent="Theme.AppCompat.Dialog">
    <!-- UI controls -->
    <item name="colorAccent">@color/datapad_accent</item>

    <!-- dialog background -->
    <item name="android:windowBackground">@color/datapad_background</item>

    <!-- varying text colors -->
    <item name="android:textColorPrimary">@color/datapad_text_primary</item>
    <item name="android:textColorSecondary">@color/datapad_text_secondary</item>
    <item name="android:textColorTertiary">@color/datapad_text_tertiary</item>
    <item name="android:textColorHint">@color/datapad_text_hint</item>
</style>

<style name="AppTheme.Dialog.Alert" parent="Theme.AppCompat.Dialog.Alert">
    <!-- UI controls -->
    <item name="colorAccent">@color/datapad_accent</item>

    <!-- dialog background -->
    <item name="android:windowBackground">@color/datapad_background</item>

    <!-- varying text colors -->
    <item name="android:textColorPrimary">@color/datapad_text_primary</item>
    <item name="android:textColorSecondary">@color/datapad_text_secondary</item>
    <item name="android:textColorTertiary">@color/datapad_text_tertiary</item>
    <item name="android:textColorHint">@color/datapad_text_hint</item>
</style>

<!--<style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
</style>-->

<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    <item name="android:textColorPrimary">@color/datapad_accent</item>
</style>

<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat"/>

<style name="AppThemeDialogTitle" parent="AppTheme.NoActionBar">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_marginTop">20dp</item>
    <item name="android:textSize">27sp</item>
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
</style>

    <style name="AppTheme.NoActionBar"></style>

</resources>









